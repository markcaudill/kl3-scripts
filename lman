#!/bin/sh
# Read Linux manual pages from Debian
# See man(1) and mandoc(1) for options

die() {
	printf '%s: %s\n' "${0##*/}" "${2}" 1>&2
	exit ${1}
}

usage() {
	cat << EOF 1>&2
usage: ${0##*/} [-c] [-l language] [-s section] [-O options]
            [-O options] [-T output] name
EOF
	exit ${1}
}

args=$(getopt cl::s::O::T:: "${@}")
[ ${?} -eq 0 ] || usage 2

set -- ${args}

# host specific defaults
host=https://manpages.debian.org
suite=/unstable
fmt=.gz

# man(1)/mandoc(1) flags
[ -t 0 ] &&
	cflag=-a ||
	cflag=-c

while [ ${#} -ne 0 ]; do
	case "${1}"
	in
	-c)
		cflag=-c
		shift;;
	-l)
		lang=."${2}"
		shift 2;;
	-s)
		section=."${2}"
		shift 2;;
	-T)
		Tflag=-T"${2}"
		shift 2;;
	--)
		shift
		break;;
	esac
done

[ -z "${@}" ] && usage 5

# foo
name=/"${@}"
scheme="${host}${suite}${pkg}${name}${section}${lang}${fmt}"

# https://.../foo.1.en.gz
url=$(curl -fsSLI "${scheme}" | grep ^Location: |
	tail -n1 | cut -d' ' -f2 | tr -d \\r)

man=${url##*/}
man=${man%.*}
# foo.1
man=${man%.*}

lmanpath="${LMANPATH:-${HOME}/.lman}"/man${man##*.}
[ -d "${lmanpath}" ] || mkdir -p "${lmanpath}" ||
	die 1 "${lmanpath} cannot be created."

# lman/man1/foo.1
file="${lmanpath}"/${man}

# cache man page, fetch/refresh if possible otherwise read from file
curl -fsSRz"${file}" -o"${file}" "${url}" || [ -e "${file}" ] ||
	die 1 "No entry for ${file##*/} in the manual."

mandoc ${cflag} ${Oflag} ${Tflag} "${file}"

#!/bin/sh
# Build OpenBSD from source according to release(8)

set -eu

[ $(id -u) -ne 0 ] &&
	printf '%s: you must be root\n' "${0##*/}" 2>&1 &&
	exit 1

ask() {
	printf '%s? [yN]: ' "${1}" 1>&2
	read REPLY
	[ "${REPLY}" = y ]
}

_build() {
	set -x
	time make -C"${DIR}" -s ${@}
}

build_base() {
	local DIR=/usr/src
	_build obj
	mount -wu /usr
	mount -s /usr/obj
	_build build
	if ask 'run sysmerge'; then
		if ask '  diff mode'; then
			sysmerge -d
		else
			sysmerge
		fi
	fi
	if ask 'create device nodes'; then
		cd /dev && ./MAKEDEV all
	fi
	mount -ru /usr
}

build_kernel() {
	local DIR=/sys/arch/"$(machine)"/compile/GENERIC.MP
	mount -s /usr/obj
	_build obj
	_build config
	_build
	if ask 'install kernel'; then
		_build install
	fi
}

build_xenocara() {
	local DIR=/usr/xenocara
	mount -wu /usr/X11R6
	mount -wu /usr/xobj
	_build bootstrap
	_build obj
	_build build
	mount -ru /usr/X11R6
}

for p in kernel base xenocara; do
	ask "build ${p}" && eval build_${p}
done

return 0

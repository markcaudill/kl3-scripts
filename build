#!/bin/sh
# Build OpenBSD kernel and/or base from source, see release(8)

set -eu

[ $(id -u) -eq 0 ]

ask() {
	printf '%s? [yN]: ' "${1}"
	read REPLY
	[ "${REPLY}" = y ] || return 1
	return 0
}

build_base() {
	mount -s /usr/obj
	make -C/usr/src obj 1>/dev/null
	make -C/usr/src build
	if ask 'run sysmerge'; then
		ask '  diff mode' && sysmerge -d || sysmerge
	fi
}

build_kernel() {
	mount -s /usr/obj
	DIR=/sys/arch/$(machine)/compile/GENERIC.MP
	make -C"${DIR}" obj
	make -C"${DIR}" config
	make -C"${DIR}"
	ask 'install kernel' && make -C"${DIR}" install
}

ask 'build kernel' && build_kernel
ask 'build base' && build_base

return 0

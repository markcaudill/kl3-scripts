#!/bin/sh
# Block entire services using iptables

# List of services to block.
as_list='
714	# Apple
8075	# Microsoft
15169	# Google
19679	# Dropbox
20940	# Akamai
32787	# Akamai (other)
32934	# Facebook
'
# Note the escaped &
api_url='https://stat.ripe.net/data/announced-prefixes/data.json?min_peers_seeing=0\&resource='

printf 'Fetch all associated networks for each service...\n'
networks=$(curl -s $(printf '%s' "${as_list}" \
			| tr -d -c '[:digit:]\n' \
			| sed "/^$/d; s,^,${api_url},g"
	) \
		| sed -n 's,^ *"prefix": "\(.*\)"$,\1,p'
)

printf 'Block IPv4 ranges...\n'
# Requires root privileges
printf '%s' "${networks}" | grep -F . \
	| xargs -n 1 -I net \
		sudo iptables -A OUTPUT -d net -j REJECT

printf 'Block IPv6 ranges...\n'
# Requires root privileges
printf '%s' "${networks}" | grep -F : \
	| xargs -n 1 -I net6 \
		sudo ip6tables -A OUTPUT -d net6 -j REJECT

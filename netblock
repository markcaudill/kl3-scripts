#!/bin/sh
# Block entire network services (provider)

[ $(id -u) -ne 0 ] \
	&& printf 'This script must be run as root.\n' \
	&& exit 1

# List of services to block
as_list='
20940	# Akamai
32787	# Akamai (other)
714	# Apple
19679	# Dropbox
32934	# Facebook
15169	# Google
8075	# Microsoft
2906	# Netflix
8403	# Spotify
32590	# Valve
8302	# Zattoo
'
api_url='https://stat.ripe.net/data/announced-prefixes/data.json?min_peers_seeing=0&resource='

name=${0##*/}

# Securely write parsed JSON data to temporary file
umask 0177
tmpfile=/tmp/"${name}"-$(od -An -N4 -tx4 /dev/random | tr -d ' ')
trap "rm -f \"${tmpfile}\"" 0 1 2 3 15

curl -s $(printf '%s' "${as_list}" \
		| awk 'NR > 1 { print "'"${api_url}"'"$1 }' ) \
	| awk -F\" '/\// { print $4 }' \
	> "${tmpfile}"


#!/bin/sh
# lock screen and take care of related things

# turn off display
xset dpms force off

# disable battery status line
pkill -SIGKILL xbattmon

# lock screen and show battery status again
slock xbattmon

# Show mugshot and save it if present
[ -f ~/slock.jpg ] && meh ~/slock.jpg && mv ~/slock.jpg ~/slock-last.jpg

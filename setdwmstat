#!/bin/sh
# set dwm's status bar

while (true)
do
	xsetroot -name "$(printf '%s  %s  E: %s  W: %s  %dÂ°C  %d%%  %s' \
		"$(sgetsong | head -c40)" \
		"$(checkvpn)" \
		"$(getip $(head -n3 /proc/net/dev \
				| tail -n1 \
				| cut -d: -f1
			) \
			| tail -n1
		)" \
		"$(getssid)" \
		"$(gettemp)" \
		"$(getvol)" \
		"$(date '+%a %d.%m.%y %H:%M')"
	)"
	sleep 30
done
